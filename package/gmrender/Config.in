config BR2_PACKAGE_GMRENDER
	bool "gmrender"
	depends on BR2_PACKAGE_HAS_OPENMAX
	select BR2_PACKAGE_GST1_PLUGINS_BASE
	select BR2_PACKAGE_GST1_OMX
	select BR2_PACKAGE_LIBUPNP
	help
	  Headless UPnP Renderer.

	  https://github.com/hzeller/gmrender-resurrect

comment "gmrender requires a OpenMAX implementation"
	depends on !BR2_PACKAGE_HAS_OPENMAX

comment "gmrender needs a toolchain w/ largefile, threads"
	depends on !(BR2_LARGEFILE && BR2_TOOLCHAIN_HAS_THREADS)
